pipeline {
    agent { label 'Java-agent' }
    
    stages {
        stage('Build') {
            steps {
                dir('new-java-project') {
                    sh 'mvn clean package'
                }
            }
        }
        
        stage('Archive JAR') {
            steps {
                dir('new-java-project') {
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }
    }
    
    post {
        failure {
            echo 'Build failed!'
        }
        success {
            echo 'Build succeeded!'
        }
    }
}
