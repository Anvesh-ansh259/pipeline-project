pipeline {
    agent { label 'java-agent' }

    environment {
        REMOTE_USER = 'ec2-user'
        REMOTE_HOST = '54.227.175.225'
        TOMCAT_HOME = '/home/ec2-user/tomcat10'
        WAR_NAME = 'new-java-project-1.0-SNAPSHOT.war'
    }

    stages {

        stage('Clean Workspace') {
            steps {
                deleteDir()
            }
        }

        stage('Checkout SCM') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Anvesh-ansh259/pipeline-project.git',
                    credentialsId: 'github-pat'
            }
        }

        stage('Build WAR') {
            steps {
                dir('new-java-project') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                sshagent(['ec2-ssh-key']) {
                    sh """
                    # Copy WAR to remote server
                    scp -o StrictHostKeyChec
